	head
		title Neshaani URL Shortener
		link(rel="stylesheet", href="css/main.css")
	body
		div.content
			img.logo(src="./img/neshaani.svg", alt="Neshaani")
			form(action="#", method="POST")
				h1 Neshaani URL Shortener
				p
					span.inputRow
						input#state.balloon(type='text', placeholder='Paste your long URL here')
						label(for='state') URL
			p.result 

		div.footer
			a(href="https://github.com/neshaani/neshaani", title="API Usage Guide") API
			span |
			a(href="https://github.com/neshaani", title="https://github.com/neshaani") GitHub
			span |
			a(href="https://twitter.com/neshaaniapp") Twitter

